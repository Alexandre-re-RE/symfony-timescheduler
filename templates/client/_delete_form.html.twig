<form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer cet élément ?');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    {% if icon|default(false) %}
        <button style="background: none; border: none; padding: 0;"><i class="fas fa-trash"></i></button>
    {% else %}
        <button class="btn btn-outline-danger">Supprimer</button>
    {% endif %}
</form>
