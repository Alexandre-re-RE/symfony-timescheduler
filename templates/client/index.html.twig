{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class="pt-4">
        <h1>Liste des clients</h1>

        <div class="card">
            <div class="card-header">
                <a href="{{ path('app_client_new') }}" class="float-end text-decoration-none">Create new</a>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Date de cr√©ation</th>
                            <th>Date de modification</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.name }}</td>
                            <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('app_client_show', {'id': client.id}) }}" class="text-black"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="text-black"><i class="fas fa-edit"></i></a>
                                {{ include('client/_delete_form.html.twig', {icon: true}) }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
